{
    "name": "Pega Chrome Tools",
    "description": "Chrome extension for Pega development",
    "version": "0.1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["*://*/prweb/*"],
          "js": ["content-scripts.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup/index.html"
    }
}
